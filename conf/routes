GET     /                           AppLoader.appController.index
GET     /*path/                     AppLoader.appController.untrail(path: String)

GET     /tech                       AppLoader.techController.all
POST    /tech                       AppLoader.techController.add
GET     /tech/:id/voteUp            AppLoader.techController.voteUp(id: String)
GET     /tech/:id/voteDown          AppLoader.techController.voteDown(id: String)

GET     /comp                       AppLoader.compController.all
GET     /comp/new                   AppLoader.compController.addForm
POST    /comp                       AppLoader.compController.add
POST    /comp/:id/addTech           AppLoader.compController.addTech(id: String)
GET     /comp/:id/remove/:techId    AppLoader.compController.removeTech(id: String, techId: String)

GET     /robots.txt 				controllers.Assets.at(path="/public", file="robots.txt")
GET     /sitemap.xml 				controllers.Assets.at(path="/public", file="sitemap.xml")
GET     /assets/*file               controllers.Assets.at(path="/public", file)
